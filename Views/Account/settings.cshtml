@*Modals*@

<div id="m_info" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal_background">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" data-bind="click:closeinfo"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Update User Infomation</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    @*<input type="text" class="form-control spacer" id="name" placeholder="name">*@
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label for="" class="control-label">First Name:</label>
                            <input type="text" class="form-control" data-bind="value:namefrst" placeholder="First name..."/>
                        </div>
                        <div class="col-sm-6">
                            <label for="" class="control-label">Last Name:</label>
                            <input type="text" class="form-control" data-bind="value:namelast" placeholder="Last name..."/>
                        </div>
                      
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label for="" class="control-label">Address:</label>
                            <input class="form-control" data-bind="value:address" />
                        </div>
                        <div class="col-sm-6">
                            <label for="" class="control-label">Phone Number:</label>
