@using snapi
@{
    ViewBag.Title = "Activate";
    Layout = "~/Views/Shared/_tinyLayout.cshtml";
}

<div id="main">
    <div class="container">
        <div class="row">
            @Html.Partial("~/Views/Shared/_tinyHeader.cshtml")
        </div>
        <div class="row">
            <div class="panel">

                <form id="f_activate" method="POST" data-bind="submit: submit">
                    <div class="p_econ">
                        @Html.AntiForgeryToken()
                        <input name="h_word" type="hidden" data-bind="value: sha1()"/>
                        <input name="h_guid" type="hidden" value="@ViewBag.Data.guid" />
                        <input name="h_note" type="hidden" value="@ViewBag.Data.noteguid" />
                        <input name="h_emal" type="hidden" value="@ViewBag.Data.emal" />
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span> </span>
                                    <input type="email" class="form-control" maxlength="256" autocomplete="off" placeholder="Email Address" required disabled value="@ViewBag.Data.emal"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group col-sm-5">
                                    <span class="input-group-addon"><span class="glyphicons glyphicons-keys"></span> </span>
                                    <input id="t_word" type="password" class="form-control" maxlength="16" autocomplete="off" placeholder="Create Password" required data-bind="value: word1, validationElement: word1"/>
                                </div>
                                <div class="input-group col-sm-5">
                                    <span class="input-group-addon"><span class="glyphicons glyphicons-keys"></span> </span>
                                    <input type="password" class="form-control" maxlength="16" autocomplete="off" placeholder="Confirm Password" required data-bind="value: word2, validationElement: word2" />
                                </div>
                            </div>
                           


                            <div class="form-group clearfix">
                                <div class="alert alert-warning" style="display: none" data-bind="fade:errors().length,foreach:errors">
                                    <i class="glyphicon glyphicon-warning-sign text-danger"></i> <span data-bind="html:mesg"></span><br />
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <div class="panel-footer p_econ">
                        <div class="form-group margin-bottom-none">

                            <button class="btn-pink pull-right" type="submit">Continue</button>
                            <div>
                                Please create an
                                <u title="Password must be 8-16 characters, with at least one capital and one lowercase letter, and one number.">account password</u> then press continue.
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </form>
            </div>


        </div>
        <div class="row">
            <div class="text-center padding-top">
                <h6 class="text-muted padding-bottom">@TempData["name"]</h6>
            </div>
        </div>
    </div>

</div>