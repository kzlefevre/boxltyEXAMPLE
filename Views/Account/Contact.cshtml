@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_tinyLayout.cshtml";
}

<div id="main">
    <div class="container">
        <div class="row">
            @Html.Partial("~/Views/Shared/_tinyHeader.cshtml")
        </div>
        <div class="row">
            <div class="panel">
                <div class="panel-heading">
                    <div class="panel-title">
                        <span class="glyphicons glyphicons-message_new"></span> Contact @Html.Raw((string) @TempData["inst"] == "core" || string.IsNullOrEmpty((string) @TempData["inst"]) ? "Software Provider" : "Plan Manager")
                    </div>
                    <span class="panel-title-sm pull-right padding-right-sm"><b></b></span>
                </div>


                <div class="panel-body" id="invoice-item">

                    <div class="row" id="invoice-table">

                        <div class="col-sm-12">

                            <form id="d_mesg" class="form-horizontal padding">
                                <p class=" text-center">Please enter your information a subject and a message then press “send Message” to send your message.</p>
                                <input type="hidden" id="h_inst" value="@TempData["inst"]"/>
                                <div class="form-group">
                                    <label>Your Name</label>
                                    <input type="text" class="form-control" data-bind="value: name, validationElement: name" required=""/>
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" data-bind="value: emal, validationElement: emal" required=""/>
                                </div>

                                <div class="form-group">
                                    <label>Subject</label>
                                    <input type="text" class="form-control" data-bind="value: subj, validationElement: subj " required=""/>
                                </div>
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea class="form-control" rows="6" data-bind="value: mesg, validationElement: mesg" required=""></textarea>
                                </div> <hr/>
                                <span class="panel-title-sm pull-left" style="padding-top: 7px;"><a href="/@TempData["code"]">Login</a>
                                    @if ((bool) ViewBag.HasCompany){
                                        <span> | </span>
                                        <a href="/Account/Help/@TempData["code"]">Username / Password Help</a>
                                    }</span>
                                <div class="form-group text-right">
                                    <button type="button" class="btn btn-orange" data-bind="click: send">
                                    <i class="glyphicon glyphicon-send"></i> Send Message
                                    </button>
                                </div>
                            </form>
                            <div id="c_mesg" class="text-center" style="display: none">
                                <div>
                                    <br/>
                                    <br/>
                                    Thank you, Support will respond to your inquiry as soon as possible.
                                    <br/>

                                    @*                                    <a id="return-arrow" href="JavaScript:window.close()" onclick="self.close()">
                                        <i class="fa fa-times-circle-o fa-3x text-red2"></i>
                                        <span class="margin-top-sm"><b>Close Window </b>
                                        </span>
                                    </a>*@

                                    <div class="clearfix"></div>
                                    <br/>
                                    <hr/>
                                    <span class="panel-title-sm pull-left" style="padding-top: 7px;"><a href="/@TempData["code"]">Login</a> @if ((bool) ViewBag.HasCompany){
                                                                                                                                                <b>|</b>
                                                                                                                                                <a href="/Account/Help/@TempData["code"]">Username / Password Help</a>
                                                                                                                                            }</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>