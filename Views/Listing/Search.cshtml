    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <section class="search_sidebar">
                    <form>
                        <div class="form-group">
                            <label for="">Location</label>
                            <input type="text" id="" class="form-control custom_inline full" placeholder="Address, City, Zip" data-bind="value: location">
                        </div>
                        <div class="form-group">
                            <label for="">Price Range</label>
                            <input type="text" id="" class="form-control custom_inline half" placeholder="Price Low">
                            <input type="text" id="" class="form-control custom_inline half" placeholder="Price High" data-bind="value: pricehigh">
                        </div>
                        <div class="form-group">
                            <div class="custom_inline half">
                                <label for="">Beds</label>
                                <select id="" class="form-control" data-bind="value: beds">
                                    <option>1+</option>
                                </select>
                            </div>
                            <div class="custom_inline half">
                                <label for="">Baths</label>
                                <select id="" class="form-control" data-bind="value: baths">
                                    <option>1+</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">House Size</label>
                            <input type="text" id="" class="form-control custom_inline half" placeholder="SqFt Low">
                            <input type="text" id="" class="form-control custom_inline half" placeholder="SqFt High" data-bind="value: sqfthigh">
                        </div>
