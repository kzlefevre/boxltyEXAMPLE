        </div>
        <div>
            <label>$<span data-bind="html: emv"></span></label>
        </div>

    </div>
</section>

@*location and neighborhood*@
<section id="proplocation" class="bg spacer section-padding" data-bind="foreach: demographics">
    <div class="container">
        <div class="row section-font sectionbottomspacing">

            <i class="fa fa-map fa-3x col-md-1 sideiconspacing" aria-hidden="true"></i>
            <h2 class="settings section-font text-uppercase col-md-6 section-bottom-spacing settings_nomargin">Location and Neighborhood</h2>
        </div>

        <div class="row text-center">
            <div class="col-md-6">
                <div class="">
                    Map with property icon Here:

                </div>
            </div>

            <div class="col-md-3 list-vertical">
                <ul class="">
                    Cost of Living
                    <li data-bind="html: 'Education: '+costs.education">Education: </li>
                    <li data-bind="html: 'Overall: '+costs.overall">Overall: </li>
                    <li data-bind="html: 'Utilities: '+costs.utilities">Utilities: </li>
                    <li>more here...</li>
                </ul>
            </div>

            <div class="col-md-3 list-vertical">
                <ul class="">
                    Population
                    <li data-bind="html: 'Current: '+population.current">Current: </li>
                    <li data-bind="html: 'Density: '+population.density">Density: </li>
                    <li data-bind="html: '1990: '+population['1990']">1990: </li>
                    <li data-bind="html: '2000: '+population['2000']">2000: </li>
                    <li data-bind="html: '2010: '+population['2010']">2010: </li>
                </ul>
            </div>
        </div>

    </div>
</section>

@*School data*@
<section id="propschooldata" class="spacer section-padding">
    <div class="container">
        <div class="row section-font sectionbottomspacing">

            <i class="fa fa-graduation-cap fa-3x col-md-1" aria-hidden="true"></i>
            <h2 class="settings section-font text-uppercase col-md-6 settings_nomargin">Nearby Schools</h2>
        </div>

        @*display Home Junction API data below*@

        <div class="row text-center">
            <div class="col-md-4 list-vertical" data-bind="foreach: list">
                <ul class="">
                    Elementary School
                    <li data-bind="html: $data.schools ? schools.elementary : 'NO DATA'">(closest elementary school name & rating)</li>
                    <li>property.label</li>
                    <li>property.name</li>
                    <li>property.admission</li>
                </ul>
            </div>

            <div class="col-md-4 list-vertical" data-bind="foreach: list">
                <ul class="">
                    Middle School
                    <li data-bind="html: $data.schools ? schools.middle : 'NO DATA'">(closest middle school name & rating)</li>
                    <li>property.label</li>
                    <li>property.name</li>
                    <li>property.admission</li>
                </ul>
            </div>

            <div class="col-md-4 list-vertical" data-bind="foreach: list">
                <ul class="">
                    High School
                    <li data-bind="html: $data.schools ? schools.high : 'NO DATA'">(closest high school name & rating)</li>
                    <li>property.label</li>
                    <li>property.name</li>
                    <li>property.admission</li>
                </ul>
            </div>
        </div>

    </div>
</section>






