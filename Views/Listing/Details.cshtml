                                    <div class="row">
                                        <!--ko foreach: images-->
                                        <!--ko if:$index() > 1-->
                                        <div class="col-md-6">
                                            <div class="listing_thumbs">
                                                <img src="/img/house-1.png" alt="Featured Listing" data-bind="attr: {src: $data}"/>
                                            </div>
                                        </div>
                                        <!--/ko-->
                                        <!--/ko-->
                                        @*<div class="col-md-6">
                                            <div class="listing_thumbs">
                                                <img src="/img/house-3.png" alt="Featured Listing" />
                                            </div>
                                        </div>*@
                                    </div>
                                    @*<div class="row">
                                        <div class="col-md-6">
                                            <div class="listing_thumbs">
                                                <img src="/img/house-1.png" alt="Featured Listing" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="listing_thumbs">
                                                <img src="/img/house-3.png" alt="Featured Listing" />
                                            </div>
                                        </div>
                                    </div>*@
                                </div>
                                @*<div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="listing_thumbs">
                                                <img src="/img/house-1.png" alt="Featured Listing" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
