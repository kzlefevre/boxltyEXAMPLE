                        <label for="" class="control-label">Price:</label>
                        <input type="text" class="form-control" id="">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Number of Bedrooms:</label>
                        <input type="text" class="form-control" id="">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Number of Bathrooms:</label>
                        <input type="text" class="form-control" id="">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Square Feet:</label>
                        <input type="text" class="form-control" id="">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Foundation Type:</label>
                        <select class="form-control" data-bind="options: foundationtype.list, optionsText: 'name', optionsValue: 'name'"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-gray2" data-dismiss="modal">Close</a>
                <a class="btn btn-primary">Save changes</a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
