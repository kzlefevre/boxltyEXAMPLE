<section id="homevalue" class="spacer section-padding">
    <div class="container">
        <div class="row section-font sectionbottomspacing">

            <i class="fa fa-usd fa-3x col-md-1" aria-hidden="true"></i>
            <h2 class="settings section-font text-uppercase col-md-6 settings_nomargin">Property Value Estimation</h2>
        </div>

