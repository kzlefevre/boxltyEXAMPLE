@using snapi
@{
    ViewBag.Title = "Property Details";
    Layout = "~/Views/Shared/_publicLayout.cshtml";
}

<div class="container container_body spacer-large">

</div>
<div data-bind="foreach: list">
    <section id="listing">
        <section id="headline_details">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="header_details_left">
                            <h1 class="header_address" data-bind="html: address.deliveryLine">327 E. MAPLE ST, YORK, PA 17403</h1>
                            <div class="header_sub_details">
                                <span data-bind="html: '$'+listPrice">$255,000</span><span class="header_mortgage">/ Est $989 /MO</span>&nbsp;&nbsp;&bull;&nbsp;&nbsp;<span data-bind="html: beds + ' Bed'">3 Bed</span>&nbsp;&nbsp;&bull;&nbsp;&nbsp;<span data-bind="html: baths.total + ' Bath'">2 Bath</span>&nbsp;&nbsp;&bull;&nbsp;&nbsp;<span data-bind="html: $data.size ? size + ' sq. ft.' : 'NO DATA'">1800 sq. ft.</span>
                            </div>
                        </div>
                        <div class="header_details_right">
                            Added on Boxlty: April 24th 2017<br />
                            Status: <span class="listing_status">Active</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="listing_photos">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="listing_main_photo">
                            <img data-bind="attr: {src: images[0]}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="carousel-example-generic" class="carousel slide" data-interval="false">

