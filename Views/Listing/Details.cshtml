                        </div>

                        <div class="text-center spacer">
                            Schedule a Showing?<br />
                            <a class="btn btn-lg btn-pink" data-bind="click: $root.contactAgent">Contact Boxlty Agent</a>
                        </div>

                        @*schedule showing modal*@
                        <div id="scheduleshowing" class="modal fade" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content modal_background">
                                    <div class="modal-header">
                                        <button type="button" class="close" aria-label="Close" data-bind="click:close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title">Schedule a Showing</h4>
