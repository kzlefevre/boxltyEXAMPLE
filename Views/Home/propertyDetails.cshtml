<section class="property-details-content bg spacer-large section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h1>KEY FEATURES</h1>
                <ul>
                    <li>Lot: 3,497 sqft</li>
                    <li>Single Family Home</li>
                    <li>Built in 1942</li>
                    <li>Attached Garage</li>
                    <li>Central Air</li>
                </ul>
            </div>
            <div class="col-md-3">
                <h1>FACTS</h1>
                <ul>
                    <li>Lot: 3,497 sqft</li>
                    <li>Single Family Home</li>
                    <li>Built in 1942</li>
                    <li>Attached Garage</li>
                    <li>Central Air</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h1>CONTACT SELLER</h1>
                <form class="contact-seller">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span> </span>
                            <input type="text" name="name" tabindex="3" class="form-control" maxlength="32" autocomplete="off" placeholder="Your Name" required data-bind="value: namelast, validationElement: namelast" />
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicons glyphicons-e-mail"></span> </span>
                        <input type="email" name="t_email" tabindex="4" class="form-control" maxlength="256" autocomplete="off" placeholder="Email Address" required data-bind="value: emal, validationElement: emal" />
                    </div>
                    <button class="btn btn-pink pull-right margin-btn" type="submit">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>